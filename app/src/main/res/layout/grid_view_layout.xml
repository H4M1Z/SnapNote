<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainActivityBackGroundColour"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGridLayout"
        android:layout_width="160dp"
        app:cardBackgroundColor="@color/cardViewColor"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:elevation="8dp"
        android:translationZ="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvShowNoteOutputInGridRecyclerView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="7"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tvShowTimeOutputInGridRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:52 AM"
                android:layout_marginStart="10dp"
                android:textColor="@color/editNoteShowOutputTimeColourGrey"
                android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/gridViewCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>