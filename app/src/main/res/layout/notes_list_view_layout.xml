<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/mainActivityBackGroundColour"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/rvListViewCardView"
        android:layout_width="300dp"
        app:cardBackgroundColor="@color/cardViewColor"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:elevation="8dp"
        android:translationZ="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvShowNoteOutputInListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/tvShowTimeOutputInListRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:text="22/10 05:22 AM"
        android:textColor="@color/editNoteShowOutputTimeColourGrey" />
    <ImageView
        android:id="@+id/ivFavourite"
        android:layout_marginStart="100dp"
        android:layout_width="15dp"
        android:visibility="invisible"
        android:layout_height="15dp"
        android:src="@drawable/baseline_favorite_24"/>
</LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<CheckBox
    android:id="@+id/listViewCheckBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"/>
</LinearLayout>